# Script for running automated tests on OSB using Travis-CI, see https://github.com/OpenSourceBrain/osb-model-validation
# Still in development, subject to change without notice!!

target: LEMS_StimuliTest.xml
engine: jNeuroML_NEURON
mep: .test.stim.mep
experiments: 
  SA1:
    observables:
      spike times:
        file:
          path: sim_StimuliTest.SpikeArrayCells.v.dat
          columns: [0,1]
          scaling: [1000, 1000]
        spike detection:
          method: threshold
          threshold: -64
        tolerance: 0
  SA2:
    observables:
      spike times:
        file:
          path: sim_StimuliTest.SpikeArrayCells.v.dat
          columns: [0,2]
          scaling: [1000, 1000]
        spike detection:
          method: threshold
          threshold: -64
        tolerance: 0
  SA3:
    observables:
      spike times:
        file:
          path: sim_StimuliTest.SpikeArrayCells.v.dat
          columns: [0,3]
          scaling: [1000, 1000]
        spike detection:
          method: threshold
          threshold: -64
        tolerance: 0