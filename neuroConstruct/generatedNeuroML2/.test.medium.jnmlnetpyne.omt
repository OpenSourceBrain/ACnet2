# Script for running automated tests on OSB, see https://github.com/OpenSourceBrain/osb-model-validation 

target: LEMS_MediumNet.xml
engine: jNeuroML_NetPyNE
mep: .test.medium.mep
experiments: 
  Pyramidal0:
    observables:
      spike times:
        file:
          path: pyramidals_48_0.0.dat
          columns: [0,1]
          scaling: [1000, 1000]
        spike detection:
          method: threshold
          threshold: 0
        tolerance: 4.2404325241136035e-05
  Pyramidal1:
    observables:
      spike times:
        file:
          path: pyramidals_48_1.0.dat
          columns: [0,1]
          scaling: [1000, 1000]
        spike detection:
          method: threshold
          threshold: 0
        tolerance: 2.581777812199134e-05
  Basket0:
    observables:
      spike times:
        file:
          path: baskets_12_0.0.dat
          columns: [0,1]
          scaling: [1000, 1000]
        spike detection:
          method: threshold
          threshold: 0
        tolerance: 0
