# Script for running automated tests on OSB, see https://github.com/OpenSourceBrain/osb-model-validation 

target: LEMS_ACnet2_LowDt.xml
engine: jNeuroML_EDEN
mep: .test.mep
experiments:
  Current clamp pyramidal:
    observables:
      spike times:
        file:
          path: pyramidal_soma_0.dat
          columns: [0,1]
          scaling: [1000, 1000]
        spike detection:
          method: threshold
          threshold: 0
        tolerance: 0.0010208952879688757
  Current clamp basket:
    observables:
      spike times:
        file:
          path: basket_soma_0.dat
          columns: [0,1]
          scaling: [1000, 1000]
        spike detection:
          method: threshold
          threshold: 0
        tolerance: 0.000289288215650068
